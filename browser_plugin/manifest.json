{
  "manifest_version": 3,
  "name": "QBot - 你的全能助理",
  "version": "1.0.0",
  "description": "QBot - 你的全能助理。划词查词、中英互查、整句翻译、生词本管理，一站搞定。",
  "permissions": ["contextMenus", "activeTab", "tabs", "storage", "webRequest", "downloads", "offscreen", "notifications", "scripting"],
  "host_permissions": ["https://dict.youdao.com/*", "<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
